<% if @user.errors.any? %>
  <div id='error_explanation' class='alert alert-danger'>
    <p><%= pluralize(@user.errors.count, 'error') %> prohibited this account from being saved:</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
  <div class='form-group row'>
    <%= f.label :email, class: 'col-sm-3 col-form-label' %>
    <%= f.text_field :email, class: 'col-sm-3 form-control' %>
  </div>

  <div class='form-group row'>
    <%= f.label :login, class: 'col-sm-3 col-form-label' %>
    <%= f.text_field :login, class: 'col-sm-3 form-control' %>
  </div>

  <div class='form-group row'>
    <%= f.label :password, class: 'col-sm-3 col-form-label' %>
    <%= f.password_field :password, class: 'col-sm-3 form-control' %>
  </div>

  <div class='form-group row'>
    <%= f.label :password_confirmation, class: 'col-sm-3 col-form-label' %>
    <%= f.password_field :password_confirmation, class: 'col-sm-3 form-control' %>
  </div>

  <div class='form-group row'>
    <div class='col-sm-4'>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
