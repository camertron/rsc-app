<h1>Login</h1>
<br/>

<%= form_for(:user, url: sessions_path) do |f| %>
  <div class='form-group row'>
    <%= f.label :login, class: 'col-sm-1 col-form-label' %>
    <%= f.text_field :login, class: 'col-sm-3 form-control' %>
  </div>

  <div class='form-group row'>
    <%= f.label :password, class: 'col-sm-1 col-form-label' %>
    <%= f.password_field :password, class: 'col-sm-3 form-control' %>
  </div>

  <div class='form-group row'>
    <div class='col-sm-4'>
      <%= f.submit 'Login', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
